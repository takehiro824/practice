.tweets
  .tweet
    .user-image
    .upper-content
      .upper-content__username
        = current_user.name
      .upper-content__tweet-date
        = tweet.created_at.strftime("%Y/%m/%d %H:%M")
      = link_to tweet_path(tweet.id), id: "modal-close-btn-delete", method: :delete do
        = fa_icon "arrow-down", class: "upper-content__arrow-down-btn"
    .main-content
      - if tweet.content.present?
        %p.main-contnet__content
          = tweet.content
      = image_tag tweet.image.url, class: 'main-content__image' if tweet.image.present?
    .under-content
      = fa_icon "heart", class: "under-content__like-btn"
      = fa_icon "retweet", class: "under-content__like-btn"
      